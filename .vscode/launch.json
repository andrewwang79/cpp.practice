    "version": "0.2.0",
    "configurations": [
        {
            "name": "DebugFile(Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/moderncpp/build/${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}",
            "args": [],
            "stopAtEntry": false,
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "enable pretty printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "DebugFile(Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/moderncpp/build/Debug/${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}",
            "args": [],
            "stopAtEntry": false,
        },
        {
            "name": "moderncpp(Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/moderncpp/build/moderncpp",
            "cwd": "${workspaceFolder}",
            "args": [],
            "stopAtEntry": false,
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "enable pretty printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "ExecPoolTest(Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/moderncpp/build/ExecPoolTest.exe",
            "cwd": "${workspaceFolder}",
            "args": [],
            "stopAtEntry": false
        },
        {
            "name": "ExecPoolTest(Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/moderncpp/build/ExecPoolTest",
            "cwd": "${workspaceFolder}",
            "args": [],
            "stopAtEntry": false,
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "enable pretty printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "dds_publisher(MacOS/Debug)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fastdds/build/hello_world",
            "cwd": "${workspaceFolder}",
            "args": ["publisher"],
            "stopAtEntry": false,
            "MIMode": "lldb",
            "environment": [
                {
                    "name": "FASTDDS_DISABLE_THREAD_AFFINITY",
                    "value": 1
                }
            ],
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "enable pretty printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "dds_subscriber(MacOS/Debug)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fastdds/build/hello_world",
            "cwd": "${workspaceFolder}",
            "args": ["subscriber"],
            "stopAtEntry": false,
            "MIMode": "lldb",
            "environment": [
                {
                    "name": "FASTDDS_DISABLE_THREAD_AFFINITY",
                    "value": 1
                }
            ],
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "enable pretty printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "dds_publisher(Windows/Debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fastdds/build/Debug/hello_world.exe",
            "args": ["publisher"],
            "stopAtEntry": false,
            "environment": [
                {
                    "name": "PATH",
                    "value": "C:/vcpkg/installed/x64-windows/debug/bin;${env:PATH};"
                }
            ],
            "cwd": "${workspaceFolder}/fastdds/build/Debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}